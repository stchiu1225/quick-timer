html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background: linear-gradient(135deg, #0c0d11 0%, #1a1c26 60%, #0e1016 100%)
  color: #f5f5f5
  font-family: 'Rajdhani', 'Helvetica Neue', sans-serif
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

#timer
  position: relative
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  background: radial-gradient(circle at 50% 20%, rgba(255, 255, 255, 0.08), transparent 42%), linear-gradient(135deg, #08090d, #0f1118 60%, #08090d)
  color: #fefefe
  text-align: center
  font-weight: 700
  font-family: 'Orbitron', 'Rajdhani', 'Century Gothic', sans-serif
  letter-spacing: 0.08em
  text-shadow: 0 0 18px rgba(255, 80, 0, 0.65), 0 0 40px rgba(255, 255, 255, 0.35)
  box-shadow: inset 0 0 50px rgba(0, 0, 0, 0.55), inset 0 0 0 4px rgba(255, 80, 0, 0.2)
  overflow: hidden

  &:before
    content: ''
    position: absolute
    inset: 0
    background-image: repeating-linear-gradient(45deg, rgba(255, 255, 255, 0.05) 0, rgba(255, 255, 255, 0.05) 18px, rgba(0, 0, 0, 0.05) 18px, rgba(0, 0, 0, 0.05) 36px)
    mix-blend-mode: screen
    opacity: 0.35
    pointer-events: none

  &:after
    content: ''
    position: absolute
    inset: 0
    background: linear-gradient(90deg, rgba(255, 80, 0, 0.12), rgba(255, 255, 255, 0.03), rgba(255, 80, 0, 0.12))
    mix-blend-mode: screen
    opacity: 0.4
    pointer-events: none

a.btn
  font-family: 'Rajdhani', 'Helvetica Neue', sans-serif
  letter-spacing: 0.05em
  text-transform: uppercase
  border-radius: 6px
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4)
  transition: transform 0.15s ease, box-shadow 0.15s ease, opacity 0.2s ease

  &:hover
    transform: translateY(-2px)
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.55)

  &:active
    transform: translateY(0)
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4)

.btn-info
  background: linear-gradient(135deg, #1d6fff, #4fa4ff)
  border-color: #1d6fff

.btn-primary
  background: linear-gradient(135deg, #ff1f3d, #ff6a2f)
  border-color: #ff1f3d

.btn-warning
  background: linear-gradient(135deg, #ffb703, #ff6a00)
  border-color: #ff8900

.btn-success
  background: linear-gradient(135deg, #00b56b, #00e6a4)
  border-color: #00c888

.btn-default
  background: linear-gradient(135deg, #2b2f3a, #3a3f4f)
  color: #f5f5f5
  border-color: #3a3f4f

