html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  background: #0d0d0d
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none

#timer
  position: relative
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  height: 100%
  background: radial-gradient(ellipse at center, #1d1d1d 0%, #0c0c0c 70%)
  color: #ff2d2d
  text-align: center
  font-weight: 800
  font-family: 'Share Tech Mono', 'Courier New', monospace
  letter-spacing: 4px
  text-shadow: 0 0 20px rgba(255, 45, 45, 0.8), 0 0 40px rgba(255, 75, 75, 0.6)
  border: 12px solid #161616
  box-shadow: 0 0 0 6px #f5f5f5, 0 25px 80px rgba(0, 0, 0, 0.65)
  overflow: hidden

  &:before
    content: ''
    position: absolute
    inset: 0
    background-image: linear-gradient(45deg, rgba(255,255,255,0.08) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.08) 50%, rgba(255,255,255,0.08) 75%, transparent 75%, transparent)
    background-size: 50px 50px
    mix-blend-mode: screen
    opacity: 0.35
    pointer-events: none

  &:after
    content: ''
    position: absolute
    top: -30%
    left: -15%
    width: 150%
    height: 60%
    background: repeating-linear-gradient(-75deg, rgba(255, 24, 1, 0.7), rgba(255, 24, 1, 0.7) 18px, rgba(255, 255, 255, 0.15) 18px, rgba(255, 255, 255, 0.15) 36px)
    opacity: 0.5
    pointer-events: none

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def10, #def30, #def60, #def180, #def300, #def600, #def900, #def1800
  position: absolute
  top: 5px
  left: 50%
  margin-left: -210px
