html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: moz-none
  -ms-user-select: none
  user-select: none
  background: #0b0d10
  background-image: linear-gradient(135deg, rgba(255,255,255,.04) 25%, transparent 25%, transparent 50%, rgba(255,255,255,.04) 50%, rgba(255,255,255,.04) 75%, transparent 75%, transparent), linear-gradient(45deg, rgba(255,255,255,.04) 25%, transparent 25%, transparent 50%, rgba(255,255,255,.04) 50%, rgba(255,255,255,.04) 75%, transparent 75%, transparent), linear-gradient(to bottom, #0b0d10 0%, #06080e 50%, #0b0d10 100%)
  background-size: 30px 30px, 30px 30px, auto
  background-position: 0 0, 15px 15px, 0 0

#timer
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  width: 100%
  height: 100%
  line-height: 100%
  background: #0f1218
  background-image: linear-gradient(135deg, rgba(255,255,255,.03) 25%, transparent 25%, transparent 50%, rgba(255,255,255,.03) 50%, rgba(255,255,255,.03) 75%, transparent 75%, transparent), linear-gradient(to bottom, rgba(0,0,0,.4), rgba(0,0,0,.8)), radial-gradient(circle at 50% 10%, rgba(255,255,255,.08), transparent 35%)
  background-size: 24px 24px, auto, auto
  color: #f2ff4b
  text-align: center
  font-weight: 700
  font-family: 'Orbitron', 'Century Gothic', sans-serif
  letter-spacing: 4px
  text-shadow: 0 0 12px rgba(255, 61, 61, .75), 0 0 24px rgba(255, 255, 255, .25)
  border-top: 8px solid #ff3131
  border-bottom: 8px solid #ff3131
  box-shadow: inset 0 0 30px rgba(0,0,0,.65), 0 25px 45px rgba(0,0,0,.6)

#hide, #toggle, #reset, #min10, #min60, #add10, #add60, #def10, #def30, #def60, #def180, #def300, #def600, #def900, #def1800
  position: absolute
  top: 5px
  left: 50%
  margin-left: -210px
  width: 170px
  height: 44px
  line-height: 30px
