.btn
  font-family: 'Orbitron', 'Helvetica Neue', sans-serif
  text-transform: uppercase
  letter-spacing: 1px
  border: none
  border-radius: 999px
  box-shadow: 0 10px 20px rgba(0,0,0,.35), inset 0 2px 0 rgba(255,255,255,.08)
  transition: transform .1s ease, box-shadow .2s ease

.btn:hover
  transform: translateY(-2px)
  box-shadow: 0 12px 26px rgba(0,0,0,.4), inset 0 2px 0 rgba(255,255,255,.12)

.btn:active
  transform: translateY(0)
  box-shadow: 0 6px 12px rgba(0,0,0,.45)

.btn-info
  background: linear-gradient(135deg, #1f1f1f, #3e3e3e)
  color: #f2ff4b
  border: 1px solid #2a2a2a

.btn-primary
  background: linear-gradient(135deg, #ff3131, #b30000)
  color: #fff
  border: 1px solid #7a0000

.btn-warning
  background: linear-gradient(135deg, #ffa000, #ff5200)
  color: #0d0d0d
  border: 1px solid #ff5200

.btn-success
  background: linear-gradient(135deg, #00c853, #006837)
  color: #f7fff2
  border: 1px solid #00592e

#hide
  background: linear-gradient(135deg, #171717, #0f0f0f)
  color: #f2ff4b

#audio
  position: absolute
  bottom: 30px
  right: 10px
  z-index: 10

#xxx
  position: absolute
  top: 10px
  left: 10px
